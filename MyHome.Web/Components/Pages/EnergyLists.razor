@page "/energylists"
@using MyHome.Core.Models.EnergySupplier
@using MudBlazor

@attribute [StreamRendering(true)]
@attribute [OutputCache(Duration = 5)]

<PageTitle>Elprisreglering</PageTitle>

<MudContainer Class="ma-4">
    <MudPaper Elevation="0" Class="mb-8">
        <MudText Typo="Typo.h3" Color="Color.Primary" Class="mb-2">Elprisöversikt</MudText>
        <MudText Typo="Typo.subtitle1">Översikt över elpriser och prisnivåer över tid</MudText>
    </MudPaper>

    <MudTable Class="mb-8" Items="prices" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@_loading" LoadingProgressColor="Color.Info">
        <HeaderContent>
            <MudTh>Datum</MudTh>
            <MudTh>Pris (sek)</MudTh>
            <MudTh>Prisnivå (extern)</MudTh>
            <MudTh>Prisnivå (intern)</MudTh>
            <MudTh>Förbrukning</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Datum">@context.PriceDetails.StartsAt.ToString()</MudTd>
            <MudTd DataLabel="Pris (sek)">@Math.Round(@context.Cost, 2) SEK</MudTd>
            <MudTd DataLabel="Prisnivå">@context.PriceDetails.LevelExternal.ToString()</MudTd>
            <MudTd DataLabel="Värmereglering">@context.PriceDetails.LevelExternal</MudTd>
            <MudTd DataLabel="Förbrukning">@context.Consumption KwH</MudTd>
        </RowTemplate>
    </MudTable>
</MudContainer>


