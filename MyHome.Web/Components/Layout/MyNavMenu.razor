@using MudBlazor
<MudNavMenu Color="Color.Primary" Class="pa-2">
    <div class="d-flex align-center px-4 py-6">
        <MudIcon Icon="@Icons.Material.Filled.Home" Color="Color.Primary" Class="mr-3" />
        <MudText Typo="Typo.h6" Color="Color.Primary">Meny</MudText>
    </div>
    <MudDivider Class="mb-4" />

    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">
        Hem
    </MudNavLink>
    <MudNavLink Href="/energycharts" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Timeline">
        Priser - Graf
    </MudNavLink>
    <MudNavLink Href="/energylists" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.TableChart">
        Priser - Tabell
    </MudNavLink>
    <MudNavLink Href="/audit" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Event">
        Händelser
    </MudNavLink>

    <MudNavGroup Title="Settings" Icon="@Icons.Material.Filled.Settings" Expanded="false">
        <MudNavLink Href="/profile" Match="NavLinkMatch.Prefix">Profile</MudNavLink>
        <MudNavLink Href="/security" Match="NavLinkMatch.Prefix">Security</MudNavLink>
    </MudNavGroup>
</MudNavMenu>